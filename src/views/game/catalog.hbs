<main id="catalog">
    <section class="game-market">
        <h1>Game Trade Code</h1>
        {{#each games}}
        <div class="offer-list">
            <div class="game">
                <div class="game-img">
                    <img src="{{imageUrl}}">
                </div>
                <div class="game-info">
                    <h1>{{name}}</h1>
                    <p><span>Platform: </span>{{platform}}</p>
                    <p><span>Genre: </span>{{genre}}</p>
                    <p><span>Price: </span>${{price}}</p>
                </div>

                <a href="/details/{{_id}}" class="btn-details">Details</a>
            </div>
        {{else}}
        <div class="no-offer">
            <p>There are no game offers found!</p>
        </div>
        {{/each}}
    </section>
</main>